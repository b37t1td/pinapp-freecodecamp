<div class="row">
<div class="col-sm-offset-3 col-sm-6 col-xs-12">
<h3>Add new Pin</h3>
<hr />

{{#if isLoading}}
  <i class="fa fa-spinner fa-spin"></i> Creating Pin..
{{else}}
<form {{action 'createPin' on='submit'}}>
  <div class="form-group">
    <label>Title:</label>
    {{input placeholder="new pin title.." type="text" class="form-control input-lg" value=pinTitle autofocus=true}}
  </div>

  <div class="form-group">
    <label>Image URL:</label>
    {{input placeholder="new pin image url.." type="text" class="form-control input-lg" value=pinURL required=true}}
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-lg btn-block {{unless isFormValid 'disabled' }}">Add Pin</button>
  </div>
</form>
{{/if}}

</div>
</div>
